$keyframe-name = inputHighlighter

@keyframes {$keyframe-name}
  from
    background-color rgba(138, 211, 242, 1)
  to
    background-color transparent
    width 0

#searchPanel
  background-color #304f5f
  display none
  position fixed
  left 0
  top 0
  width 100%
  z-index 1

  .searchopened &
    display block

#inputContainer
  text-align center

  .group
    display inline-block
    margin 30px 15px 15px
    position relative

  input
    background-color transparent
    border none
    border-bottom 1px solid #fff
    color #fff
    display block
    font-family inconsolata, "Courier New", monospace
    font-size 18px
    padding 10px 10px 10px 5px
    width 300px

    &:focus
      outline none

      & ~ .highlight
        -webkit-animation inputHighlighter 0.3s ease
        -moz-animation inputHighlighter 0.3s ease
        animation inputHighlighter 0.3s ease

  label
    color #fff
    font-size 18px
    font-weight normal
    left 5px
    pointer-events none
    position absolute
    top 10px
    -webkit-transition 0.2s ease all
    -moz-transition 0.2s ease all
    transition 0.2s ease all

  input:focus ~ label,
  input:valid ~ label
    color rgba(138, 211, 242, 1)
    font-size 14px
    top -20px

  .bar
    display block
    position relative
    width 300px

    &:before
      left 50%

    &:after
      right 50%

  .bar:before,
  .bar:after
    background rgba(138, 211, 242, 1)
    bottom 1px
    content ''
    height 2px
    position absolute
    -webkit-transition 0.2s ease all
    -moz-transition 0.2s ease all
    transition 0.2s ease all
    width 0

  input:focus ~ .bar:before,
  input:focus ~ .bar:after
    width 50%

  .highlight
    height 60%
    left 0
    opacity 0.5
    pointer-events none
    position absolute
    top 25%
    width 100px

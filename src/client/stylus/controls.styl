#controlPanel
  padding 1em 0
  position fixed
  right 0
  top 8%
  width 88px
  z-index 1

ul#controls
  list-style none
  padding 0

ul#controls li
  background-color transparent
  background-size cover
  border-radius 100%
  box-shadow inset 0 2px 0 rgba(138, 211, 242, .4), inset 0 -1px 0 rgba(138, 211, 242, .4)
  cursor pointer
  display block
  height 3em
  margin 20% 0
  width 3em

ul#controls li:hover
  background-color rgba(138, 211, 242, 0.5)
  box-shadow inset 0 2px 0 rgba(138, 211, 242, 1), inset 0 -1px 0 rgba(138, 211, 242, 1), 0 0 1em rgba(138, 211, 242, 1)

li#searchControl
  background-image url('/public/assets/images/search.png')

li#searchControl.active
  background-image url('/public/assets/images/up.png')

li#eyeControl
  background-image url('/public/assets/images/eyeopen.png')

li#eyeControl.active
  background-image url('/public/assets/images/eyeclosed.png')

li#wrapControl
  background-image url('/public/assets/images/wrap.png')

li#wrapControl.active
  background-image url('/public/assets/images/unwrap.png')

li#pauseControl
  background-image url('/public/assets/images/pause.png')

li#pauseControl.active
  background-image url('/public/assets/images/resume.png')

li#clearControl
  background-image url('/public/assets/images/clear.png')

li#scrollTopControl
  background-image url('/public/assets/images/scrolltop.png')

li#scrollBottomControl
  background-image url('/public/assets/images/scrollbottom.png')
